@model UrlShortener.Services.ViewModels.CreateShortUrlViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div id="url-shortener">
    <h1 class="display-4">URL:</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="text-danger" v-if="errors.length"><ul><li v-for="e in errors">{{e}}</li></ul></div>
            <div class="form-group">
                <input type="url" v-model="url" class="form-control" placeholder="http://yoursite.com/page" v-on:keyup.enter="create" />
            </div>
            <div class="form-group pull-right">
                <input type="submit" value="Create" v-on:click="create" :disabled="!canSubmit" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <div class="row" v-if="createdUrl"><span>Your Short URL is: {{createdUrl}}&nbsp;</span><a :href="createdUrl" target="_blank">Open</a></div>
</div>